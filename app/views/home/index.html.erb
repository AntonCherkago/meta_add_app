<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <h1>Connect Your Facebook Ads Account</h1>
      <%= link_to "Connect with Facebook", user_facebook_omniauth_authorize_path, method: :post %> <br>
      <br> <%= link_to 'Edit profile', edit_user_registration_path %>
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, style: 'margin-top: 25px' %>
    <% else %>
      <%= link_to 'Sign up', new_user_registration_path %> |
      <%= link_to 'Login', new_user_session_path %>
      <% end %>
    <%= yield %>
  </body>
</html>
